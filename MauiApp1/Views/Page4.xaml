<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.Views.Page4"
             Title="Page4">
    <ScrollView>
        <VerticalStackLayout Padding="20">
            <Label Text="{Binding Student.Name}" FontSize="24" FontAttributes="Bold" />
            <Label Text="{Binding Student.Email}" />
            <Label Text="Возраст:" FontAttributes="Bold" />
            <Label Text="{Binding Student.Age}" />
            <Label Text="Группа:" FontAttributes="Bold" />
            <Label Text="{Binding Student.Group}" />
            <Label Text="Год поступления:" FontAttributes="Bold" />
            <Label Text="{Binding Student.EnrollmentYear}" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>